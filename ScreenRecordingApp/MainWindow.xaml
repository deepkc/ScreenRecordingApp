<Window x:Class="ScreenRecordingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Screen Recorder" Height="350" Width="525">
    <Grid>
        <!-- Start and Stop Recording Buttons -->
        <Button Name="btnStartRecording" Content="Start Recording" VerticalAlignment="Top" HorizontalAlignment="Left" Click="StartRecording_Click" />
        <Button Name="btnStopRecording" Content="Stop Recording" VerticalAlignment="Top" HorizontalAlignment="Right" Click="StopRecording_Click" IsEnabled="False" />
        <Button Name="btnPauseRecording" Content="Pause Recording" VerticalAlignment="Top" HorizontalAlignment="Center" Click="PauseRecording_Click" IsEnabled="False"/>

        <!-- Progress Bar -->
        <ProgressBar Name="progressBar" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Height="20" />

        <!-- Preview Image -->
        <Image Name="screenPreview" Width="300" Height="200" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Window>
